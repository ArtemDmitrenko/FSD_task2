include ../rate-button/rate-button.pug

mixin room(options)
    - const {addressOfRoom, numberOfImage, roomNumber, lux, price, rate, numberOfReviews} = options

    .room
        .room__card.js-room__card.slider
            each image in numberOfImage
                img(src=require(`../../components/room/${addressOfRoom}/${image}.png`).default, alt="Photo").foto
        .room__room-description
            .room__room-block
                h1.room__room-number <span>№</span> #{roomNumber}
                if lux
                    h3.room__room-type Люкс
            h3.room__price #{price} <span>в сутки</span>
        .room__line
        .room__rate
            .room__rate-button
                +rate-button({value: rate})
            .room__review #{numberOfReviews} <span>Отзывов</span>