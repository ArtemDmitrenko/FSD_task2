mixin range-slider(options = {})
  - const { title = 'title', name = 'price', description = '' } = options

  .range-slider
    if title
      span.range-slider__title= title
    if description
      span.range-slider__description= description
    input(
      type = 'text',
      name = name,
      value = ''
    ).range-slider__item.js-range-slider__item