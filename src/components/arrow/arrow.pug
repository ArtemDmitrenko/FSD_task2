//- 
    options.purple - color of arrow is purple gradient
    options.white - color of arrow is white

mixin arrow(options = {})
    - let {color, direction} = options;
    case color
        when 'purple'
            if direction === 'right'
                span.arrow_direction_right.arrow_color_purple
            else
                span.arrow_direction_left.arrow_color_purple
        when 'white'
            if direction === 'right'
                span.arrow_direction_right.arrow_color_white
            else
                span.arrow_direction_left.arrow_color_white
