include ../../arrow/arrow.pug
include ../../btn/btn.pug

mixin calendar()
  .calendar
    .calendar__row1
      +arrow({color: 'purple', direction: 'left'})
      .calendar__month Август 2019
      +arrow({color: 'purple', direction: 'right'})
    .calendar__row2
      .calendar__allDays
        .calendar__dayInWeek Пн
        .calendar__dayInWeek Вт
        .calendar__dayInWeek Ср
        .calendar__dayInWeek Чт
        .calendar__dayInWeek Пт
        .calendar__dayInWeek Сб
        .calendar__dayInWeek Вс
      .calendar__numbers
        .calendar__numberLine1
          .calendar__number 29
          .calendar__number 30
          .calendar__number 31
          - let n = 1;
          while n < 5
            .calendar__number= n++
        .calendar__numberLine2
          while n < 12
            .calendar__number= n++
        .calendar__numberLine3
          while n < 19
            .calendar__number= n++
        .calendar__numberLine4
          while n < 26
            .calendar__number= n++
        .calendar__numberLine5
          while n < 32
            .calendar__number= n++
          .calendar__number 1
    .calendar__row3
      .calendar__btnClear
        +btn({modificator: 'btn_iconLinkViolent', text: 'Очистить'})
      .calendar__btnApply
        +btn({modificator: 'btn_iconLinkViolent', text: 'Применить'})



