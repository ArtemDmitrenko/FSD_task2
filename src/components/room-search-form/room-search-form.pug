include ../date-dropdown/date-dropdown.pug
include ../dropdown/dropdown.pug
include ../button/button.pug

mixin room-search-form()
  form(action='#' method='post').room-search-form.js-room-search-form
    h1.room-search-form__title Найдём номера под ваши пожелания
    .room-search-form__dates.js-room-search-form__dates
      .room-search-form__check-in
        +date-dropdown({titleFrom: 'Прибытие', titleTo: 'Выезд', separatedInputs: true})
    .room-search-form__guests.js-room-search-form__guests
      +dropdown(({
        name: 'guests', 
        withButtons: true, 
        heading: 'Гости', 
        value: 'Сколько гостей',
        description: '',
        items: [
          {
            name: 'adults', 
            sign: 'взрослые', 
            declination: 'взрослый, взрослых, взрослых',
            defaultValue: 0
          },{
            name: 'children', 
            sign: 'дети', 
            declination: 'дети, детей, детей',
            defaultValue: 0
          },{
            name: 'infants', 
            sign: 'младенцы', 
            declination: 'младенец, младенца, младенцев',
            defaultValue: 0
          },
        ],
        declination: 'гость, гостя, гостей',
      }))
    .room-search-form__submission
      +button({assignment: 'button', style: 'directed', size: 'big', text: 'Подобрать номер', type: 'submit'})