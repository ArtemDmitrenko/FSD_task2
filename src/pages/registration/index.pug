extends ../../templates/template.pug
include ../../common.blocks/pages/header/header.pug
include ../../common.blocks/pages/form-registration/form-registration.pug
include ../../common.blocks/pages/footer/footer.pug
include ../../common.blocks/pages/footerTab/footerTab.pug

block title
    title Registration

block content
    .registration
        .registration__header
            +header({modificator: "NotRegistered"})
        .registration__main
            img(src="registration.png", alt="registration").registration__image
            .registration__form
                +form-registration()
        .registration__footer_wide
            +footer()
        .registration__footer_tab
            +footerTab()

block script
    script(src="main.js")