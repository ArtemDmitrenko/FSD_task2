extends ../../templates/template.pug
include ../../components/header/header.pug
include ../../components/form-roomsearch/form-roomsearch.pug
include ../../components/footer/footer.pug
include ../../components/footer-tab/footer-tab.pug

block title
    title Landing page

block content
    .landing-page
        header.landing-page__header
            +header({modifier: "NotRegistered"})
        main.landing-page__image
            .landing-page__wrapper
                .landing-page__form
                    +form-roomsearch()
                p.landing-page__text Лучшие номера для вашей работы, отдыха и просто вдохновения
        footer.landing-page__footer
            .landing-page__footer_wide
                +footer()
            .landing-page__footer_tab
                +footer-tab()
