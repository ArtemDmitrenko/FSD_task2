extends ../../templates/template.pug
include ../../components/date-dropdown/date-dropdown.pug
include ../../components/dropdown/dropdown.pug
include ../../components/range-slider/range-slider.pug
include ../../components/checkbox-button/checkbox-button.pug
include ../../components/room/room.pug
include ../../components/rate-button/rate-button.pug
include ../../components/pagination/pagination.pug

block title
  title Search room

block main
  main.search-room
    section.search-room__sidebar
      .search-room__filter-date-dropdown
        +date-dropdown({heading: 'Даты пребывания в отеле', name: 'Dates in 1 input'})
      .search-room__dropdown-guests
        +dropdown({
          name: 'guests', 
          dropdownType: 'withButtons', 
          heading: 'Гости', 
          value: 'Сколько гостей',
          items: [
            {
              name: 'adults', 
              sign: 'взрослые', 
              declination: 'взрослый, взрослых, взрослых'
            },{
              name: 'children', 
              sign: 'дети', 
              declination: 'дети, детей, детей',
            },{
              name: 'infants', 
              sign: 'младенцы', 
              declination: 'младенец, младенца, младенцев'
            },
          ],
          declination: 'гость, гостя, гостей',
        })
      .search-room__range-slider
        +range-slider()
      .search-room__checkbox-button
        +checkbox-button({name: 'Правила дома', expandable: false, list: ['Можно курить', 'Можно с питомцами', 'Можно пригласить гостей (до 10 человек)']})
      .search-room__rich-checkbox
        +checkbox-button({expandable: false, richCheckbox: 'true', name: 'Доступность', list: ['Широкий коридор', 'Помощник для инвалидов'], sublist: ['Ширина коридоров в номере не менее 91 см.', 'На 1 этаже вас встретит специалист  и проводит до номера.']})
      .search-room__dropdown-rooms
        +dropdown({
          name: 'roomsBeds', 
          dropdownType: 'noButtons', 
          heading: 'удобства номера', 
          items: [
            {
              name: 'bedrooms', 
              sign: 'спальни', 
              declination: 'спальня, спальни, спален'
            }, {
              name: 'beds', 
              sign: 'кровати', 
              declination: 'кровать, кровати, кроватей',
            },{
              name: 'bathrooms', 
              sign: 'ванные комнаты', 
              declination: 'ванная комната, ванные комнаты, ванных комнат'
            },
          ]
        })
      .search-room__expandable-checkbox
        +checkbox-button({expandable: true, name: 'Дополнительные удобства', list: ['Завтрак', 'Письменный стол', 'Стул для кормления', 'Кроватка', 'Телевизор', 'Шампунь']})
