extends ../../templates/template-uikit.pug
include ../../components/logo-uikit/logo-uikit.pug
include ../../components/input/input.pug
include ../../components/dropdown/dropdown.pug
include ../../components/date-dropdown/date-dropdown.pug
include ../../components/checkbox-list/checkbox-list.pug
include ../../components/room-info/room-info.pug
include ../../components/radio-buttons/radio-buttons.pug
include ../../components/toggle/toggle.pug
include ../../components/like-button/like-button.pug
include ../../components/rate-button/rate-button.pug
include ../../components/bullet-list/bullet-list.pug
include ../../components/review/review.pug
include ../../components/pagination/pagination.pug
include ../../components/range-slider/range-slider.pug
include ../../components/button/button.pug

block title
  title Form elements

block content
  .form-elements
    .form-elements__logo-uikit
      +logo-uikit()
    .form-elements__items
      .form-elements__first-column
        .form-elements__element
          .form-elements__text-field
            +input({heading: 'text field', description: 'default', name: 'email', type: 'email', placeholder: 'Email', required: true})
        .form-elements__element
          .form-elements__hovered-text-field.js-form-elements__hovered-text-field
            +input({heading: 'text field', description: 'Hover / Focus', name: 'Text', type: 'email', placeholder: 'This is pretty awesome', required: true})
        .form-elements__element 
          .form-elements__dropdown.js-form-elements__dropdown
            +dropdown({
              name: 'guests', 
              withButtons: true, 
              heading: 'dropdown', 
              value: 'Сколько гостей',
              declination: 'гость, гостя, гостей',
              items: [
                {
                  name: 'adults', 
                  sign: 'взрослые', 
                  declination: 'взрослый, взрослых, взрослых'
                },{
                  name: 'children', 
                  sign: 'дети', 
                  declination: 'дети, детей, детей',
                },{
                  name: 'infants', 
                  sign: 'младенцы', 
                  declination: 'младенец, младенца, младенцев',
                  isSeparated: true
                },
              ],
            })
        .form-elements__element
          .form-elements__masked-input.js-form-elements__masked-input
            +input({heading: 'masked text field', name: 'birthday', type: 'text', placeholder: 'ДД.ММ.ГГГГ', required: true})
        .form-elements__element 
          .form-elements__datepicker.js-form-elements__datepicker.form-elements__datepicker_range-in-two-inputs
            +date-dropdown({titleFrom: 'date Dropdown', titleTo: 'date Dropdown', defaultValueTo: '19.08.2019', separatedInputs: true})
        .form-elements__element 
          .form-elements__datepicker.js-form-elements__datepicker.form-elements__datepicker_range-in-one-input
            +date-dropdown({titleFrom: 'filter date dropdown', defaultValueFrom: '19 авг - 23 авг', separatedInputs: false })
        .form-elements__element
          .form-elements__subscription-input
            +input({heading: 'subscription text field', name: 'email', type: 'email', placeholder: 'Email', required: true, subscription: true })
        .form-elements__element.form-elements__element_not-expanded
          .form-elements__dropdown.js-form-elements__dropdown
            +dropdown({
              name: 'roomsBeds', 
              withButtons: false, 
              heading: 'dropdown', 
              description: 'default',
              items: [
                {
                  name: 'bedrooms', 
                  sign: 'спальни', 
                  declination: 'спальня, спальни, спален',
                  defaultValue: 2
                }, {
                  name: 'beds', 
                  sign: 'кровати', 
                  declination: 'кровать, кровати, кроватей',
                  defaultValue: 2
                },{
                  name: 'bathrooms', 
                  sign: 'ванные комнаты', 
                  declination: 'ванная комната, ванные комнаты, ванных комнат',
                  defaultValue: 2
                },
              ],
            })
        .form-elements__element.form-elements__element_expanded
          .form-elements__opened-dropdown.js-form-elements__opened-dropdown
            +dropdown({
              name: 'roomsBeds', 
              withButtons: false, 
              heading: 'dropdown', 
              description: 'expanded',
              items: [
                {
                  name: 'bedrooms', 
                  sign: 'спальни', 
                  declination: 'спальня, спальни, спален',
                  defaultValue: 2
                }, {
                  name: 'beds', 
                  sign: 'кровати', 
                  declination: 'кровать, кровати, кроватей',
                  defaultValue: 2
                },{
                  name: 'bathrooms', 
                  sign: 'ванные комнаты', 
                  declination: 'ванная комната, ванные комнаты, ванных комнат',
                  defaultValue: 0
                },
              ],
            })
        .form-elements__element
          .form-elements__checkbox-list.js-form-elements__checkbox-list.form-elements__checkbox-list_not-expandable
            +checkbox-list({
              isExpandable: true, 
              title: 'Expandable checkbox list', 
              list: [
                {item: 'Завтрак'},  
                {item: 'Письменный стол'},
                {item: 'Стул для кормления'},
                {item: 'Кроватка'},
                {item: 'Телевизор'},  
                {item: 'Шампунь'}
              ]
            })
        .form-elements__element
          .form-elements__opened-checkbox-list.js-form-elements__opened-checkbox-list
            +checkbox-list({
              isExpandable: true, 
              title: 'Expandable checkbox list', 
              list: [
                {item: 'Завтрак'},  
                {item: 'Письменный стол', checked: true},
                {item: 'Стул для кормления', checked: true},
                {item: 'Кроватка', checked: true},
                {item: 'Телевизор'},  
                {item: 'Шампунь'}
              ]
            })
        .form-elements__element
          .form-elements__room-details
            +room-info({title: 'Сведения о номере', roomInfo: [
              { name:'Комфорт', description: 'Шумопоглощающие стены', image: 'insert_emoticon' }, 
              { name:'Удобство', description: 'Окно в каждой из спален', image: 'location_city' }
            ]})              
      .form-elements__second-column
        .form-elements__buttons
          .form-elements__sub-column1
            .form-elements__element
              .form-elements__checkbox-list.js-form-elements__checkbox-list
                +checkbox-list({
                  isExpandable: false, 
                  title: 'Checkbox buttons',
                  list: [
                    {item: 'Можно курить'},  
                    {item: 'Можно с питомцами', checked: true},
                    {item: 'Можно пригласить гостей (до 10 человек)', checked: true}  
                  ]
                })
            .form-elements__element
              .form-elements__radio-buttons
                +radio-buttons({ 
                  title: 'Radio Buttons', 
                  list: [
                    {text: 'Мужчина', checked: true}, 
                    {text: 'Женщина'}
                  ]
                })
            .form-elements__element
              .form-elements__toggle.form-elements__toggle_checked.js-form-elements__toggle_checked
                +toggle({name: 'Toggle', label: 'Получать спецпредложения'})
              .form-elements__toggle
                +toggle({label: 'Получать спецпредложения'})
            .form-elements__element
              .form-elements__like-buttons
                .form-elements__like-button
                  +like-button({title: 'Like button', numberOfLikes: '1'})
                .form-elements__like-button_clicked.js-form-elements__like-button_clicked
                  +like-button({numberOfLikes: '9999'})
            .form-elements__element
              .form-elements__rate-button
                +rate-button({title: 'Rate button', value: '4'})
                +rate-button({value: '5'})
            .form-elements__element 
              .form-elements__opened-dropdown.js-form-elements__opened-dropdown.form-elements__opened-dropdown_with-guests
                +dropdown({
                  name: 'guests', 
                  withButtons: true, 
                  heading: 'dropdown', 
                  value: 'Сколько гостей',
                  declination: 'гость, гостя, гостей',
                  items: [
                    {
                      name: 'adults', 
                      sign: 'взрослые', 
                      declination: 'взрослый, взрослых, взрослых'
                    },{
                      name: 'children', 
                      sign: 'дети', 
                      declination: 'дети, детей, детей',
                    },{
                      name: 'infants', 
                      sign: 'младенцы', 
                      declination: 'младенец, младенца, младенцев',
                      isSeparated: true
                    },
                  ],
                })
            .form-elements__element
              .form-elements__checkbox-list.js-form-elements__checkbox-list
                +checkbox-list({
                  isExpandable: false, 
                  withDescription: true, 
                  title: 'Rich checkbox buttons', 
                  list: [
                    {item: 'Широкий коридор', subItem: 'Ширина коридоров в номере не менее 91 см.'},  
                    {item: 'Помощник для инвалидов', subItem: 'На 1 этаже вас встретит специалист  и проводит до номера.'}  
                  ]
                })
          .form-elements__sub-column2
            .form-elements__element
              .form-elements__range-slider.js-form-elements__range-slider
                +range-slider({title: 'Range slider'})
            .form-elements__element
              .form-elements__all-button
                .form-elements__button-title Buttons
                  .form-elements__button-row1
                    .form-elements__button-solid
                      +button({assignment: 'button', style: 'solid', size: 'big', text: 'click me'})
                    .form-elements__button-solid_hovered.js-form-elements__button-solid_hovered
                      +button({assignment: 'button', style: 'solid', size: 'big', text: 'click me'})
                  .form-elements__button-row2
                    .form-elements__button-bordered
                      +button({assignment: 'button', style: 'bordered', size: 'big', text: 'click me'})
                    .form-elements__button-bordered_hovered.js-form-elements__button-bordered_hovered
                      +button({assignment: 'button', style: 'bordered', size: 'big', text: 'click me'})
                  .form-elements__button-row3
                      +button({assignment: 'button', style: 'texted', color: 'violent', text: 'click me'})
                      +button({assignment: 'button', style: 'texted', color: 'black', text: 'click me'})
                  .form-elements__button-row4
                    +button({assignment: 'button', style: 'directed', size: 'big', text: 'перейти к оплате'})
            .form-elements__element
              .form-elements__pagination.js-form-elements__pagination
                .form-elements__pagination-title Pagination
                +pagination()
            .form-elements__element
              .form-elements__opened-dropdown.js-form-elements__opened-dropdown.form-elements__opened-dropdown_with-guests
                +dropdown({
                  name: 'guests', 
                  withButtons: true, 
                  heading: 'dropdown', 
                  value: 'Сколько гостей',
                  declination: 'гость, гостя, гостей',
                  items: [
                    {
                      name: 'adults', 
                      sign: 'взрослые', 
                      declination: 'взрослый, взрослых, взрослых',
                      defaultValue: 2
                    },{
                      name: 'children', 
                      sign: 'дети', 
                      declination: 'дети, детей, детей',
                      defaultValue: 1
                    },{
                      name: 'infants', 
                      sign: 'младенцы', 
                      declination: 'младенец, младенца, младенцев',
                      isSeparated: true
                    },
                  ],
                })
            .form-elements__element
              .form-elements__bullet-list
                +bullet-list({name: 'Bullet list', list: ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00']})
        .form-elements__element
          .form-elements__review.js-form-elements__review
            +review({nameOfFile: 'sarafanov', title: 'Мурад Сарафанов', date: '5 дней назад', numberOfLikes: '11', textOfReview: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'})
