block title
  title Form elements

block content
  .form-elements
    .form-elements__logo-UIkit
      +logo-UIkit()
    .form-elements__all-items
      .form-elements__global-row1
        .form-elements__text-field.form-elements__element
          +input({heading: 'text field', description: 'default', name: 'email', type: 'email', placeholder: 'Email', required: true})
        .form-elements__text-field.form-elements__element
          +input({heading: 'text field', description: 'Hover / Focus', name: 'Text', type: 'email', placeholder: 'This is pretty awesome', required: true})
        .form-elements__dropdown.form-elements__element 
          +dropdown({
            name: 'guests', 
            dropdownType: 'withButtons', 
            heading: 'dropdown', 
            value: 'Сколько гостей',
            items: [
              {
                name: 'adults', 
                sign: 'взрослые', 
                declination: 'взрослый, взрослых, взрослых'
              },{
                name: 'children', 
                sign: 'дети', 
                declination: 'дети, детей, детей',
              },{
                name: 'infants', 
                sign: 'младенцы', 
                declination: 'младенец, младенца, младенцев'
              },
            ],
            declination: 'гость, гостя, гостей',
          })
        .form-elements__masked-input.form-elements__element
          +input({heading: 'masked text field', name: 'birthday', type: 'text', placeholder: 'ДД.ММ.ГГГГ', required: true})
        .form-elements__datepicker.form-elements__datepicker_range-in-two.form-elements__element
          +date-dropdown({twoInputsTitleFrom: 'date Dropdown', twoInputsTitleTo: 'date Dropdown', name: 'twoInputs'})
        .form-elements__datepicker.form-elements__datepicker_range-in-one.form-elements__element
          +date-dropdown({oneInputTitle: 'filter date dropdown', name: 'oneInput'})
        .form-elements__subscription-input.form-elements__element 
          +input({heading: 'subscription text field', name: 'email', type: 'email', placeholder: 'Email', required: true, subscription: true})
        .form-elements__dropdown.form-elements__element.form-elements__element_not-expanded
          +dropdown({
            name: 'roomsBeds', 
            dropdownType: 'noButtons', 
            heading: 'dropdown', 
            description: 'default', 
            items: [
              {
                name: 'bedrooms', 
                sign: 'спальни', 
                declination: 'спальня, спальни, спален'
              }, {
                name: 'beds', 
                sign: 'кровати', 
                declination: 'кровать, кровати, кроватей',
              },{
                name: 'bathrooms', 
                sign: 'ванные комнаты', 
                declination: 'ванная комната, ванные комнаты, ванных комнат'
              },
            ]
          })
        .form-elements__dropdown.form-elements__element.form-elements__element_expanded
          +dropdown({
            name: 'roomsBeds', 
            dropdownType: 'noButtons', 
            heading: 'dropdown', 
            description: 'expanded', 
            items: [
              {
                name: 'bedrooms', 
                sign: 'спальни', 
                declination: 'спальня, спальни, спален'
              }, {
                name: 'beds', 
                sign: 'кровати', 
                declination: 'кровать, кровати, кроватей',
              },{
                name: 'bathrooms', 
                sign: 'ванные комнаты', 
                declination: 'ванная комната, ванные комнаты, ванных комнат'
              },
            ]
          })
        .form-elements__checkbox-button.form-elements__element.form-elements__checkbox-button_not-expandable
          +checkbox-button({expandable: true, name: 'Expandable checkbox list', list: ['Завтрак', 'Письменный стол', 'Стул для кормления', 'Кроватка', 'Телевизор', 'Шампунь'], forLabel: '1'})
        .form-elements__checkbox-button.form-elements__element
          +checkbox-button({expandable: true, name: 'Expandable checkbox list', list: ['Завтрак', 'Письменный стол', 'Стул для кормления', 'Кроватка', 'Телевизор', 'Шампунь'], forLabel: '2'})
        .form-elements__room-details.form-elements__element
          +room-info({title: '', name: ['Комфорт', 'Удобство'], description: ['Шумопоглощающие стены', 'Окно в каждой из спален'], image: ['insert_emoticon', 'location_city']})
      .form-elements__global-row2
        .form-elements__sub-row
          .form-elements__sub-row1
            .form-elements__checkbox-button.form-elements__element
              +checkbox-button({expandable: false, name: 'Checkbox buttons', list: ['Можно курить', 'Можно с питомцами', 'Можно пригласить гостей (до 10 человек)']})
            .form-elements__radio-buttons.form-elements__element
              +radio-buttons({name: 'Radio Buttons', list: ['Мужчина', 'Женщина']})
            .form-elements__toggle.form-elements__element
              +toggle({name: 'Toggle', label: 'Получать спецпредложения'})
              +toggle({label: 'Получать спецпредложения'})
            .form-elements__like-button.form-elements__element
              +like-button({name: 'Like button', numberOfLikes: '2'})
              +like-button({numberOfLikes: '11'})
            .form-elements__rate-button.form-elements__element
              +rate-button({name: 'Rate button', value: '4'})
              +rate-button({value: '5'})
            .form-elements__dropdown.form-elements__dropdown_with-guests.form-elements__element 
              +dropdown({
                name: 'guests', 
                dropdownType: 'withButtons', 
                heading: 'dropdown', 
                value: 'Сколько гостей',
                items: [
                  {
                    name: 'adults', 
                    sign: 'взрослые', 
                    declination: 'взрослый, взрослых, взрослых'
                  },{
                    name: 'children', 
                    sign: 'дети', 
                    declination: 'дети, детей, детей',
                  },{
                    name: 'infants', 
                    sign: 'младенцы', 
                    declination: 'младенец, младенца, младенцев'
                  },
                ],
                declination: 'гость, гостя, гостей',
              })
            .form-elements__checkbox-button.form-elements__element
              +checkbox-button({expandable: false, richCheckbox: 'true', name: 'Rich checkbox buttons', list: ['Широкий коридор', 'Помощник для инвалидов'], sublist: ['Ширина коридоров в номере не менее 91 см.', 'На 1 этаже вас встретит специалист  и проводит до номера.']})
          .form-elements__sub-row2
            .form-elements__range-slider.js-form-elements__range-slider.form-elements__element
              +range-slider()
            .form-elements__button.form-elements__element
              .form-elements__button-title Buttons
                .form-elements__button-row1
                  +button({assignment: 'button', style: 'solid', size: 'big', text: 'click me'})
                  +button({assignment: 'button', style: 'solid', size: 'big', text: 'click me'})
                .form-elements__button-row2
                  +button({assignment: 'button', style: 'bordered', size: 'big', text: 'click me'})
                  +button({assignment: 'button', style: 'bordered', size: 'small', text: 'click me'})
                .form-elements__button-row3
                  +button({assignment: 'button', style: 'texted', color: 'violent', text: 'click me'})
                  +button({assignment: 'button', style: 'texted', color: 'black', text: 'click me'})
                .form-elements__button-row4
                  +button({assignment: 'button', style: 'directed', size: 'big', text: 'перейти к оплате'})
            .form-elements__pagination.form-elements__element
              .form-elements__pagination-title Pagination
                +pagination()
            .form-elements__dropdown.form-elements__dropdown_with-guests.form-elements__element.form-elements__dropdown_expandedGuests
              +dropdown({
                name: 'guests', 
                dropdownType: 'withButtons', 
                heading: 'dropdown', 
                value: 'Сколько гостей',
                items: [
                  {
                    name: 'adults', 
                    sign: 'взрослые', 
                    declination: 'взрослый, взрослых, взрослых'
                  },{
                    name: 'children', 
                    sign: 'дети', 
                    declination: 'дети, детей, детей',
                  },{
                    name: 'infants', 
                    sign: 'младенцы', 
                    declination: 'младенец, младенца, младенцев'
                  },
                ],
                declination: 'гость, гостя, гостей',
              })
            .form-elements__bullet-list.form-elements__element
              +bullet-list({name: 'Bullet list', list: ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00']})
        .form-elements__review.form-elements__element
          +review({nameOfFile: 'sarafanov', name: 'Мурад Сарафанов', date: '5 дней назад', numberOfLikes: '11', textOfReview: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'})
