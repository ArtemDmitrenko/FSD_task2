extends ../../templates/template.pug
include ../../components/UIkit/logo-UIkit/logo-UIkit.pug
include ../../components/form-roomsearch/form-roomsearch.pug
include ../../components/form-registration/form-registration.pug
include ../../components/form-confirmation/form-confirmation.pug
include ../../components/form-log-in/form-log-in.pug
include ../../components/room/room.pug
include ../../components/UIkit/calendar/calendar.pug


block title
    title Cards

block content
    .cards
        .cards__logo-UIkit
            +logo-UIkit()
        .cards__all-items
            .cards__room-search
                +form-roomsearch()
            .cards__registration
                +form-registration()
            .cards__confirmation
                +form-confirmation()
            .cards__log-in
                +form-log-in()
            .cards__datepicker
                +calendar()
            .cards__room
                +room({adressOfRoom: '../../components/room/room1/', numberOfImage: ["image1.png", "image2.png", "image3.png", "image4.png"], roomNumber: '888', lux: true, price: '9 990₽', rate: '5', numberOfReviews: '145'})
            .cards__room
                +room({adressOfRoom: '../../components/room/room2/', numberOfImage: ["image1.png", "image2.png", "image3.png", "image4.png"], roomNumber: '840', price: '9 990₽', rate: '4', numberOfReviews: '65'})

block script
    script(src="main.js")