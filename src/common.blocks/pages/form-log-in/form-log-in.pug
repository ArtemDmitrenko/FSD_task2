include ../input/input.pug
include ../button/button.pug

mixin form-log-in()
    form(action="#" method="get").form-log-in
        h1.form-log-in__title Войти
        .form-log-in__email
            +input({name: 'E-mail', type: 'email', placeholder: 'Email'})
        .form-log-in__password
            +input({name: 'Password', type: 'text', placeholder: 'Пароль'})
        .form-log-in__submit
            +btn({modificator: 'btn_longWithArrow', text: 'Войти', type: 'submit'})
        .form-log-in__registered
            .form-log-in__registered-on-Toxin
                p.form-log-in__text Нет аккаунта на Toxin?
            .form-log-in__btn
                +btn({modificator: 'btn_border', text: 'Создать', type: 'submit'})        //-     .form-roomsearch__check-in


