include ../input/input.pug
include ../dateDropdown/dateDropdown.pug
include ../dropdown/dropdown.pug
include ../button/button.pug

mixin form-confirmation()
    form(action="#" method="get").form-confirmation
        .form-confirmation__room-description
            .form-confirmation__room-block
                h1.form-confirmation__room-number <span>№</span> 888 
                h3.form-confirmation__room-type Люкс
            h3.form-confirmation__price 9 990₽ <span>в сутки</span>
        .form-confirmation__dates
            .form-confirmation__check-in
                +dateDropdown({heading: 'Прибытие', name: 'Check-in date', value: '19.08.2019'})
            .form-confirmation__check-out
                +dateDropdown({heading: 'Выезд', name: 'Check-out date', value: '23.08.2019'})
        .form-confirmation__guests
            +dropdown({dropdownType: 'guests', heading: 'гости', value: '3 гостя'})
        .form-confirmation__part
            .form-confirmation__text 9 990₽ х 4 суток
            .form-confirmation__sum 39 960₽
        .form-confirmation__part
            .form-confirmation__text-info
                .form-confirmation__text Сбор за услуги: скидка&nbsp;2&nbsp;179₽
                .form-confirmation__info
                    .form-confirmation__letter i
            .form-confirmation__sum 0₽
        .form-confirmation__part
            .form-confirmation__text-info
                .form-confirmation__text Сбор за дополнительные услуги
                .form-confirmation__info
                    .form-confirmation__letter i
            .form-confirmation__sum 300₽
        .form-confirmation__total
            h2.form-confirmation__final Итого
            h2.form-confirmation__ellipsis
            h2.form-confirmation__rubles 38 081₽
        .form-confirmation__submit
            +btn({modificator: 'btn_longWithArrow', text: 'Забронировать', type: 'submit'})




