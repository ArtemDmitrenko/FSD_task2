//-
  options.isMasked - masked input
  options.name - form element name
  options.type - input type
  options.value - input value
  options.placeholder - input placeholder
  options.pattern - input pattern
  options.dateMask - masked text field
  options.tabindex - input tabindex
  options.required - input required
  options.label - подпись к checkbox и radio
  options.dropdown - if it is a dropdown
  options.subscription - if it is a subscription text field with arrow

include ../checkmark/checkmark.pug
include ../arrow/arrow.pug

mixin input(options = {})
    - const {heading, description, name, type, value, placeholder, dropdown, readonly, subscription, dateDropdown} = options
    if dateDropdown
        .input
            if heading
                .input__heading= heading
            input.input__element.input__dateDropdown(heading = heading name = name type = type value = value placeholder = placeholder readonly = readonly dateDropdown = dateDropdown)
            .input__checkmark
                +checkmark()
    else
        .input
            if heading
                .input__heading= heading
            if description
                .input__description= description
            input.input__element(name = name type = type value = value placeholder = placeholder dropdown = dropdown readonly = readonly subscription = subscription dateDropdown = dateDropdown)
            if dropdown
                .input__checkmark
                    +checkmark()
            if subscription
                .input__subscription
                    button(type="submit").input__defaultButton
                        +arrow({color:'purple', direction:'right'})