include ../input/input.pug
include ../button/button.pug
include ../counter/counter.pug


mixin dropdown()
    .dropdown
        .dropdown__input
            +input({name: 'guests', type: 'text', value: 'Сколько гостей', required: true, dropdown: true, readonly: true})
        .dropdown__list
            .dropdown__counter
                +counter(["Взрослые", "Adults"])
                +counter(["Дети", "Children"])
                +counter(["Младенцы", "Infants"])
            .dropdown__btn
                .dropdown-guests__btn-clear
                    +btn({modificator: 'btn_iconLinkBlack', text: 'Очистить', name: 'clear'})
                .dropdown-guests__btn-apply
                    +btn({modificator: 'btn_iconLinkViolent', text: 'Применить', name: 'apply'})

