        ul.menu__list
            li.menu__item
                a.menu__link.menu__link_active(href='#') О нас
            li.menu__item
                .menu__dropdown
                    a.menu__link.menu__link_common(href='#') Услуги
                    button.menu__dropdown_arrow
            li.menu__item
                a.menu__link.menu__link_common(href='#') Вакансии
            li.menu__item
                a.menu__link.menu__link_common(href='#') Новости
            li.menu__item
                .menu__dropdown
                    a.menu__link.menu__link_common(href='#') Соглашения
                    button.menu__dropdown_arrow



